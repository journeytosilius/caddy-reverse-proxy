{
	admin off
	persist_config off
	auto_https off

	log {
		format json
	}

	servers {
		trusted_proxies static private_ranges
	}
}

:{$PORT} {
	bind 0.0.0.0

	log {
		format json
	}

	# ✅ Health endpoint (Railway-friendly)
	handle /healthz {
		respond "ok" 200
	}

	# ✅ Data API proxy routes (strip /graph)
	handle_path /graph/* {
		reverse_proxy {$BACKEND_DOMAIN}:{$BACKEND_PORT} {
			# Send correct host header (not IP:port)
			header_up Host {$BACKEND_DOMAIN}

			transport http {
				dial_timeout 30s
			}
		}
	}

	# ✅ Data API proxy routes (strip /markets)
	handle_path /markets/* {
		reverse_proxy {$BACKEND_DOMAIN}:{$BACKEND_PORT} {
			header_up Host {$BACKEND_DOMAIN}

			transport http {
				dial_timeout 30s
			}
		}
	}

	# ✅ Frontend fallback
	handle {
		reverse_proxy {$FRONTEND_DOMAIN}:{$FRONTEND_PORT} {
			header_up Host {$FRONTEND_DOMAIN}

			transport http {
				dial_timeout 30s
			}
		}
	}
}
