# Global options
{
	admin off
	persist_config off
	auto_https off
	log {
		format json
	}
	servers {
		trusted_proxies static private_ranges
	}
}

(lb_settings) {
	lb_policy round_robin
	lb_retries 100
	lb_try_duration 10s
	lb_try_interval 250ms
}

(passive_health_checks) {
	fail_duration 60s
	max_fails 300
	unhealthy_latency 5s
	unhealthy_request_count 200
}

:{$PORT} {
	log {
		format json
	}

	# ✅ Data API proxy FIRST so it actually matches
	handle /markets/* {
		reverse_proxy {
			dynamic a {$BACKEND_DOMAIN} {$BACKEND_PORT} {
				refresh 1s
				dial_timeout 30s
				versions ipv4 ipv6
			}
			import lb_settings
			import passive_health_checks
			header_up Host {upstream_hostport}
		}
	}

	# ✅ Frontend fallback (matches everything else)
	handle {
		reverse_proxy {
			dynamic a {$FRONTEND_DOMAIN} {$FRONTEND_PORT} {
				refresh 1s
				dial_timeout 30s
				versions ipv4 ipv6
			}
			import lb_settings
			import passive_health_checks
			header_up Host {upstream_hostport}
		}
	}
}
